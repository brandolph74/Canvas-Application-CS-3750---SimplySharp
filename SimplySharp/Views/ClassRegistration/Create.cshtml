@model SimplySharp.Models.ClassRegistration
@using Microsoft.AspNetCore.Identity
@using SimplySharp.Areas.Identity.Data

@inject SignInManager<SimplySharpUser> SignInManager
@inject UserManager<SimplySharpUser> UserManager
@{
    var loggedUser = (await UserManager.GetUserAsync(User));
}
@{
    ViewData["Title"] = "Register for a Class";
}
@{
    var data = ViewBag.Message;
}

<h1>Register</h1>

<h3>Are you sure you want to register for this class?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Class Id
        </dt>
        <dd class="col-sm-10">
            @data.classId
        </dd>
        <dt class="col-sm-2">
            Class Name
        </dt>
        <dd class="col-sm-10">
            @data.className
        </dd>
        <dt class="col-sm-2">
            Class Credits
        </dt>
        <dd class="col-sm-10">
            @data.credits
        </dd>
        <dt class="col-sm-2">
            Class Location
        </dt>
        <dd class="col-sm-10">
            @data.location
        </dd>
        <dt class="col-sm-2">
            Meeting Times
        </dt>
        <dd class="col-sm-10">
            @data.meetingTimes
        </dd>        
    </dl>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="ClassId" class="control-label" hidden></label>
            <input asp-for="ClassId" class="form-control" hidden />
            <span asp-validation-for="ClassId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StudentId" class="control-label" hidden></label>
            <input asp-for="StudentId" class="form-control" hidden />
            <span asp-validation-for="StudentId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LetterGrade" class="control-label" hidden></label>
            <input asp-for="LetterGrade" class="form-control" hidden />
            <span asp-validation-for="LetterGrade" class="text-danger"></span>
        </div>

        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-alt-circle-left"></i> &nbsp; Back to List
        </a>
        
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Register" class="btn btn-success" />
    </form>
</div>
